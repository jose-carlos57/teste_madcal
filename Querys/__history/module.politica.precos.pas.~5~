function inserirItens(FDConnection:TFDConnection; var id_produto: string; var id_tabela_preco: double ; var preco: double): boolean;

implementation
function inserirItens(FDConnection:TFDConnection; var id_produto: string; var id_tabela_preco: double ; var preco: double): boolean;
Var FDQuery: TFDQuery;
begin
  FDQuery := TFDQuery.Create(nil);
  try
    FDQuery.Connection := FDConnection;
    FDQuery.SQL.Text := 'INSERT INTO politica_precos (idTabela_de_precos, id_Produtos, Preco) VALUES (:idTabela_de_precos, :id_Produtos, :Preco)';

    // Define os parâmetros
    FDQuery.ParamByName('idTabela_de_precos').AsString := id_produto;
    FDQuery.ParamByName('id_Produtos').AsFloat := id_tabela_preco;
    FDQuery.ParamByName('Preco').AsFloat := preco;

    // Executa a query

    try
      FDQuery.ExecSQL;
      Result:= true;
    except
      ShowMessage('Erro ao inserir dados!')
    end;
  finally
    FDQuery.Free;
  end;
end;

end.

